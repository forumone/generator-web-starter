<?xml version="1.0"?>
<ruleset name="drupal_project">
  <description>PHP_CodeSniffer standards for Drupal-based projects.</description>

  <!-- Use default Drupal coding standards. -->
  <rule ref="Drupal" />
  <rule ref="DrupalPractice" />

  <!-- Scan within this directory. -->
  <file>.</file>

  <exclude-pattern>vendor/*</exclude-pattern>
  <exclude-pattern>drush/*</exclude-pattern>
  <exclude-pattern>tests/**/*.md</exclude-pattern>
  <exclude-pattern>node_modules/*</exclude-pattern>
  <exclude-pattern><%= documentRoot %>/core</exclude-pattern>
  <exclude-pattern><%= documentRoot %>/libraries/*</exclude-pattern>
  <exclude-pattern><%= documentRoot %>/modules/contrib/*</exclude-pattern>
  <exclude-pattern><%= documentRoot %>/profiles/contrib/*</exclude-pattern>
  <exclude-pattern><%= documentRoot %>/themes/contrib/*</exclude-pattern>

</ruleset>
